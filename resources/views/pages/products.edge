@layouts.main({ title: 'Products' })
  @slot('content')
    <section class="px-8 py-4">
      <h2 class="text-xl font-semibold">
        List Produk
      </h2>
    </section>

    <section class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8 p-8">
      @each(product in products)
        @!productCard({
          product: product
        })
      @endeach
    </section>
  @endslot
@end
